<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$42.00 Pumpkin Faire"
                android:id="@+id/chargeSummaryTextView" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Yesterday, 11:11am on your Visa"
                android:id="@+id/chargeDescriptionTextView"
                android:singleLine="true" />

        </LinearLayout>

        <ToggleButton
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/approveToggleButton"
            android:checked="false"
            android:layout_weight="1"
            android:textOff="Approve"
            android:textOn="Disapprove" />

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/spacerImageView"
        android:background="#444444"
        android:contentDescription="spacer" />

</LinearLayout>

